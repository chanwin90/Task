<odoo>
    <data>
        <record model="ir.ui.view" id="view_fleet_token_form">
            <field name="name">fleet.token.form</field>
            <field name="model">custom_fleet.fleet_token</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="car1"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_fleet_token_tree" model="ir.ui.view">
            <field name="name">fleet.token.tree</field>
            <field name="model">custom_fleet.fleet_token</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="car1"/>
                </tree>
            </field>
        </record>

        <!-- Trip Action -->
        <record id="action_fleet_token" model="ir.actions.act_window">
            <field name="name">Fleet Tokens</field>
            <field name="res_model">custom_fleet.fleet_token</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top-level menu item -->
        <menuitem id="menu_fleet" name="Fleet" sequence="10"/>

        <!-- Submenu item under Fleet -->
        <menuitem id="menu_fleet_tokens" name="Fleet Tokens"
                  parent="menu_fleet" action="action_fleet_token" sequence="10"/>
    </data>
</odoo>

